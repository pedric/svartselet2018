{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h4>{{ post.hero_metadata }}</h4>
				<h1>{{ post.hero_title }}</h1>
				<p>{{ post.hero_description }}</p>
				<div class="article-body">
					{# {{ post.content }} #}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}